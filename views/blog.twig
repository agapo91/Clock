{% extends "pages/default.twig" %}
{% block content %}
    <div class="row justify-content-center">
        {% for blogPost in blogInPage %}
            <div class="col-12 col-lg-6 my-2">
                <div class="card ">
                    {% if blogPost.img_url %}
                        <img class="card-img-top" style="height: 15rem;" src="{{ blogPost.img_url }}" alt="Card image cap">
                    {% endif %}
                    <div class="card-body d-flex flex-column align-items-start">
                        <a href="{{ ('blogpost/' ~ blogPost.id) | url }}">
                            <h5 class="card-title">{{ blogPost.title }}</h5>
                        </a>
                        <p class="card-text">
                            {{ blogPost.content }}
                            {% if blogPost.cutted %}
                                <a href="{{ ('blogpost/' ~ blogPost.id) | url }}">Read more</a>
                            {% endif %}
                        </p>
                        <p class="card-text mt-auto">Written by <a href="{{ ('user/'~blogPost.user_id) | url }}" class="card-link">{{ blogPost.username }}</a></p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% include 'partials/pagination.twig' %}
{% endblock %}